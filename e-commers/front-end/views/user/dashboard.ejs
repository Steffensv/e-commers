<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="../../public/img/57589.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>My Account</title>
</head>

<body style="background-color: rgba(128, 128, 128, 0.515);">

  <div>
    <%- include('partials/navbar') %>
  </div>


  <div>
    <div class="wallpaper-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; overflow: hidden;">
      <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 90%; height: 90%;">
        <img src="/img/wallpaper.png" alt="Background Wallpaper" style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px; z-index: -1; opacity: 0.7;">
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: border-box(rgba(128, 128, 128, 0.686), rgba(79, 74, 74, 0.6)); border-radius: 10px;"></div>
      </div>
    </div>
  </div>


<!-- REMOVE THIS AND THE LOGIC BEHIND IT BEFORE LAUNCH! -->
<!-- THIS TEST IS FOR DEBUGGING USES ONLY ADMIN PRIVLEDGES IS NEEDED. -->
  <!-- <div class="mt-4">
    <button id="testTokenBtn" class="btn btn-secondary">Test JWT Token</button>
    <div id="tokenResult" class="mt-2"></div>
  </div> -->

  <div>
    <%- include('../partials/products') %>
  </div>

  <!-- Hidden dashboard that will be shown when userProfile is clicked -->
  <div class="container mt-3" id="dashboardContainer" style="display: none; background-color: rgb(79, 74, 74); color: red; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000; border-radius: 15px;">
    <!-- Navigation tabs -->
    <ul class="container d-flex justify-content-between align-content-center nav-tabs mt-4" id="userTabs" role="tablist" style="list-style: none;">
      <li class="nav-item" role="presentation">
        <button class="btn btn-danger mt-3 mb-3" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="true" style="border:1px solid black; border-radius:20px; color: red; text-decoration: solid; font-weight: bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000, 2px 2px 5px rgb(75, 75, 75);">My Profile</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="btn btn-danger mt-3 mb-3" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab" aria-controls="orders" aria-selected="false" style="border:1px solid black; border-radius:20px; color: red; text-decoration: solid; font-weight: bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000, 2px 2px 5px rgb(75, 75, 75);">Order History</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="btn btn-danger mt-3 mb-3" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab" aria-controls="settings" aria-selected="false" style="border:1px solid black; border-radius:20px; color: red; text-decoration: solid; font-weight: bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000, 2px 2px 5px rgb(75, 75, 75);">Account Settings</button>
      </li>
    </ul>

    <!-- Tab content -->
    <div class="tab-content" id="userTabsContent">
      <!-- PROFILE TAB -->
      <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="card mt-3" style="background-color: rgb(79, 74, 74); color: red; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000; border-radius: 15px;">
          <div class="card-header">
            <h3>My Profile</h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <h4>Personal Information</h4>
                <div class="mb-3">
                  <strong>Name:</strong> <%= user.firstname %> <%= user.lastname %>
                </div>
                <div class="mb-3">
                  <strong>Username:</strong> <%= user.username %>
                </div>
                <div class="mb-3">
                  <strong>Email:</strong> <%= user.email %>
                </div>
                <div class="mb-3">
                  <strong>Address:</strong> <%= user.address || 'Not provided' %>
                </div>
                <div class="mb-3">
                  <strong>Phone:</strong> <%= user.phone || 'Not provided' %>
                </div>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#editProfileModal" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">
                  Edit Profile
                </button>
              </div>
              <div class="col-md-6">
                <h4>Membership Information</h4>
                <div class="mb-3">
                  <strong>Current Membership:</strong> <%= user.membership ? user.membership.name : 'Basic' %>
                </div>
                <div class="mb-3">
                  <strong>Discount:</strong> <%= user.membership ? user.membership.discount : 0 %>%
                </div>
                <div class="mb-3">
                  <strong>Member Since:</strong> <%= new Date(user.createdAt).toLocaleDateString() %>
                </div>
                <% if (locals.memberships && memberships.length > 0) { %>
                  <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#upgradeMembershipModal" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">
                    View Membership Options
                  </button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- ORDERS TAB -->
      <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
        <div class="card mt-3" style="background-color: rgb(79, 74, 74); color: red; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000; border-radius: 15px;">
          <div class="card-header">
            <h3>Order History</h3>
          </div>
          <div class="card-body">
            <!-- Orders table -->
            <div class="table-responsive">
              <% if (locals.orders && orders.length > 0) { %>
                <table class="table table-dark table-hover">
                  <thead>
                    <tr>
                      <th>Order ID</th>
                      <th>Date</th>
                      <th>Status</th>
                      <th>Total Amount</th>
                      <th>Items</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% orders.forEach(order => { %>
                      <tr>
                        <td><%= order.id %></td>
                        <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                        <td>
                          <span class="badge rounded-pill <%= 
                            order.status === 'paid' ? 'bg-info' : 
                            order.status === 'shipped' ? 'bg-primary' : 
                            order.status === 'delivered' ? 'bg-success' : 
                            order.status === 'canceled' ? 'bg-danger' : 
                            'bg-secondary' 
                          %>">
                            <%= order.status %>
                          </span>
                        </td>
                        <td>$<%= order.totalAmount.toFixed(2) %></td>
                        <td><%= order.OrderItems ? order.OrderItems.length : 0 %></td>
                        <td>
                          <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#viewOrderModal<%= order.id %>">
                            View Details
                          </button>
                        </td>
                      </tr>

                      <!-- View Order Modal -->
                      <div class="modal fade" id="viewOrderModal<%= order.id %>" tabindex="-1" aria-labelledby="viewOrderModalLabel<%= order.id %>" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                          <div class="modal-content" style="background-color: rgb(79, 74, 74); color: red;">
                            <div class="modal-header">
                              <h5 class="modal-title" id="viewOrderModalLabel<%= order.id %>">Order Details #<%= order.id %></h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              <div class="mb-3">
                                <h6>Order Information</h6>
                                <p>
                                  <strong>Order ID:</strong> <%= order.id %><br>
                                  <strong>Date:</strong> <%= new Date(order.createdAt).toLocaleString() %><br>
                                  <strong>Status:</strong> <span class="badge <%= 
                                    order.status === 'paid' ? 'bg-info' : 
                                    order.status === 'shipped' ? 'bg-primary' : 
                                    order.status === 'delivered' ? 'bg-success' : 
                                    order.status === 'canceled' ? 'bg-danger' : 
                                    'bg-secondary' 
                                  %>"><%= order.status %></span>
                                </p>
                              </div>
                              
                              <h6>Order Items</h6>
                              <div class="table-responsive">
                                <% if (order.OrderItems && order.OrderItems.length > 0) { %>
                                  <table class="table table-dark">
                                    <thead>
                                      <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Subtotal</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% order.OrderItems.forEach(item => { %>
                                        <tr>
                                          <td><%= item.Product ? item.Product.name : `Product ID: ${item.productId}` %></td>
                                          <td>$<%= item.price.toFixed(2) %></td>
                                          <td><%= item.quantity %></td>
                                          <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                                        </tr>
                                      <% }) %>
                                    </tbody>
                                    <tfoot>
                                      <% if (order.discountAmount && order.discountAmount > 0) { %>
                                        <tr>
                                          <td colspan="3" class="text-end">Discount:</td>
                                          <td>-$<%= order.discountAmount.toFixed(2) %></td>
                                        </tr>
                                      <% } %>
                                      <tr>
                                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                        <td><strong>$<%= order.totalAmount.toFixed(2) %></strong></td>
                                      </tr>
                                    </tfoot>
                                  </table>
                                <% } else { %>
                                  <p>No items found for this order</p>
                                <% } %>
                              </div>
                              
                              <% if (order.shippingAddress) { %>
                                <h6>Shipping Information</h6>
                                <p><%= order.shippingAddress %></p>
                              <% } %>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <% if (order.status === 'paid') { %>
                                <a href="/orders/<%= order.id %>/invoice" class="btn btn-danger" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">Download Invoice</a>
                              <% } %>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  </tbody>
                </table>
              <% } else { %>
                <div class="alert alert-info" style="background-color: rgba(128, 128, 128, 0.515); color: red; border: 1px solid black;">
                  You haven't placed any orders yet. <a href="/products" style="color: red; text-decoration: underline;">Start shopping</a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- SETTINGS TAB -->
      <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="settings-tab">
        <div class="card mt-3" style="background-color: rgb(79, 74, 74); color: red; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000; border-radius: 15px;">
          <div class="card-header">
            <h3>Account Settings</h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <h4>Change Password</h4>
                <form action="/user/change-password" method="POST">
                  <div class="mb-3">
                    <label for="currentPassword" class="form-label">Current Password</label>
                    <input type="password" class="form-control" id="currentPassword" name="currentPassword" required style="color: red; background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
                  </div>
                  <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input type="password" class="form-control" id="newPassword" name="newPassword" required style="color: red; background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
                  </div>
                  <div class="mb-3"></div>
                    <label for="confirmPassword" class="form-label">Confirm New Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required style="color: red; background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
                  </div>
                  <button type="submit" class="btn btn-danger" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">Change Password</button>
                </form>
              </div>
              <div class="col-md-6">
                <h4>Communication Preferences</h4>
                <form action="/user/update-preferences" method="POST">
                  <div class="mb-3">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="receiveEmails" name="receiveEmails" <%= user.preferences && user.preferences.receiveEmails ? 'checked' : '' %> style="background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
                      <label class="form-check-label" for="receiveEmails">
                        Receive promotional emails
                      </label>
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="form-check"></div>
                      <input class="form-check-input" type="checkbox" id="receiveUpdates" name="receiveUpdates" <%= user.preferences && user.preferences.receiveUpdates ? 'checked' : '' %> style="background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
                      <label class="form-check-label" for="receiveUpdates">
                        Receive product updates
                      </label>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-danger" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">Save Preferences</button>
                </form>
                
                <hr style="border-color: red; margin: 20px 0;">
                
                <h4>Delete Account</h4>
                <p>Warning: This action cannot be undone.</p>
                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal" style="color: red; border: 1px solid black;">
                  Delete My Account
                </button>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>



  <!-- Edit Profile Modal -->
  <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content" style="background-color: rgb(79, 74, 74); color: red;">
        <div class="modal-header">
          <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/user/update-profile" method="POST">
            <div class="mb-3">
              <label for="firstname" class="form-label">First Name</label>
              <input type="text" class="form-control" id="firstname" name="firstname" value="<%= user.firstname %>" required style="color: red; background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
            </div>
            <div class="mb-3">
              <label for="lastname" class="form-label">Last Name</label>
              <input type="text" class="form-control" id="lastname" name="lastname" value="<%= user.lastname %>" required style="color: red; background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required style="color: red; background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
            </div>
            <div class="mb-3">
              <label for="address" class="form-label">Address</label>
              <textarea class="form-control" id="address" name="address" rows="3" style="color: red; background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;"><%= user.address || '' %></textarea>
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone</label>
              <input type="tel" class="form-control" id="phone" name="phone" value="<%= user.phone || '' %>" style="color: red; background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
            </div>
            <div class="text-end">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-danger" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Upgrade Membership Modal -->
  <div class="modal fade" id="upgradeMembershipModal" tabindex="-1" aria-labelledby="upgradeMembershipModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content" style="background-color: rgb(79, 74, 74); color: red;">
        <div class="modal-header">
          <h5 class="modal-title" id="upgradeMembershipModalLabel">Membership Options</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <% if (locals.memberships && memberships.length > 0) { %>
            <div class="list-group">
              <% memberships.forEach(membership => { %>
                <div class="list-group-item d-flex justify-content-between align-items-center" style="background-color: rgba(128, 128, 128, 0.515); color: red; margin-bottom: 10px; border: 1px solid black;">
                  <div>
                    <h6><%= membership.name %></h6>
                    <p class="mb-1"><%= membership.discount %>% discount on all products</p>
                    <% if (user.membershipId === membership.id) { %>
                      <span class="badge bg-success">Current Plan</span>
                    <% } %>
                  </div>
                  <% if (user.membershipId !== membership.id) { %>
                    <form action="/user/update-membership" method="POST">
                      <input type="hidden" name="membershipId" value="<%= membership.id %>">
                      <button type="submit" class="btn btn-danger btn-sm" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">
                        Select
                      </button>
                    </form>
                  <% } %>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <p>No membership options available.</p>
          <% } %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Delete Account Modal -->
  <div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content" style="background-color: rgb(79, 74, 74); color: red;">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteAccountModalLabel">Confirm Account Deletion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete your account? This action cannot be undone and will result in permanent loss of your account and all associated data.</p>
          <form action="/user/delete-account" method="POST" id="deleteAccountForm">
            <div class="mb-3">
              <label for="passwordConfirm" class="form-label">Please enter your password to confirm</label>
              <input type="password" class="form-control" id="passwordConfirm" name="password" required style="color: red; background-color: rgba(128, 128, 128, 0.515); border: 1px solid black;">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" form="deleteAccountForm" class="btn btn-danger" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">Delete My Account</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>


    document.getElementById('testTokenBtn').addEventListener('click', async function() {
    try {
      const response = await fetch('/auth/check-token');
      const data = await response.json();

      document.getElementById('tokenResult').innerHTML = 
        `<div class="card">
          <div class="card-body">
            <h5 class="card-title">Token Test Result</h5>
            <p>Valid: ${data.valid}</p>
            <p>Message: ${data.message}</p>
            ${data.tokenPrefix ? `<p>Token: ${data.tokenPrefix}</p>` : ''}
            <p>Status: ${data.responseStatus || 'N/A'}</p>
            ${data.error ? `<p>Error: ${data.error}</p>` : ''}
            <pre>${JSON.stringify(data, null, 2)}</pre>
          </div>
        </div>`;
    } catch (error) {
      document.getElementById('tokenResult').innerHTML = 
        `<div class="alert alert-danger">Error: ${error.message}</div>`;
    }
    });

    
    document.addEventListener('DOMContentLoaded', function() {
    // Get DOM elements
    const userField = document.getElementById('userField');
    const userProfile = document.getElementById('userProfile');
    const dashboardContainer = document.getElementById('dashboardContainer');
    
    // Find the products section more reliably
    const productsSection = document.querySelector('div:has(> .products-container)') || 
                            document.querySelector('div > .products-container')?.parentNode ||
                            document.querySelector('div:nth-child(3)'); // Fallback
    
    // Add console logs for debugging
    console.log('User Field:', userField);
    console.log('User Profile:', userProfile);
    console.log('Dashboard Container:', dashboardContainer);
    console.log('Products Section:', productsSection);
    
    // Define the toggle function
    function toggleDashboard(event) {
      event.preventDefault(); // Prevent any default behavior
      
      console.log('Toggle clicked');
      console.log('Current display:', dashboardContainer.style.display);
      
      // Toggle visibility
      const isHidden = dashboardContainer.style.display === 'none' || 
                       dashboardContainer.style.display === '';
                       
      if (isHidden) {
        dashboardContainer.style.display = 'block';
        if (productsSection) {
          productsSection.style.display = 'none';
        }
        console.log('Showing dashboard');
      } else {
        dashboardContainer.style.display = 'none';
        if (productsSection) {
          productsSection.style.display = 'block';
        }
        console.log('Hiding dashboard');
      }
    }
    
    // Add event listeners
    if (userField) {
      userField.style.cursor = 'pointer'; // Add pointer cursor to indicate clickability
      userField.addEventListener('click', toggleDashboard);
    }
    
    if (userProfile) {
      userProfile.style.cursor = 'pointer'; // Add pointer cursor to indicate clickability
      userProfile.addEventListener('click', toggleDashboard);
    }
    
    // Form validation for password change
    const passwordForm = document.querySelector('form[action="/user/change-password"]');
    if (passwordForm) {
      passwordForm.addEventListener('submit', function(event) {
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        
        if (newPassword !== confirmPassword) {
          event.preventDefault();
          alert('New passwords do not match!');
        }
      });
    }

    // Add to cart functionality
    document.querySelectorAll('.add-to-cart').forEach(button => {
      button.addEventListener('click', async function() {
        const productId = this.getAttribute('data-product-id');
        try {
          const response = await fetch('/cart/add', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              productId: productId,
              quantity: 1
            })
          });
          
          const data = await response.json();
          if (data.success) {
            alert('Product added to cart!');
          } else {
            alert('Error adding product to cart');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error adding product to cart');
        }
      });
    });
  });


  </script>
