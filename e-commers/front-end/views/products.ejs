<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="../public/img/57589.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Products</title>
</head>
<body style="background-color: rgba(128, 128, 128, 0.515);">
  <div>
    <%- include('partials/navbar') %>
  </div>
  
  <div>
    <div class="wallpaper-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; overflow: hidden;">
      <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 90%; height: 90%;">
        <img src="/img/wallpaper.png" alt="Background Wallpaper" style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px; z-index: -1; opacity: 0.7;">
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: border-box(rgba(128, 128, 128, 0.686), rgba(79, 74, 74, 0.6)); border-radius: 10px;"></div>
      </div>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="container mt-4 products-container">
    <div class="container d-flex justify-content-center align-items-center text-center mt-5">
      <h1 style="font-size: 40px; color: red; text-decoration: solid; font-weight: bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000, 2px 2px 5px rgb(75, 75, 75);">Products</h1>
    </div>

    <form action="/search" method="GET" class="d-flex m-3 justify-content-center">
      <input type="text" name="q" class="form-control me-2 text-center" placeholder="Search products..." 
      style="margin-left: auto; width: 50%; background-color: rgb(79, 74, 74); border:1px solid black; border-radius:20px; color: red; text-decoration: solid; font-weight: bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000, 2px 2px 5px rgb(75, 75, 75);"
      onfocus="this.style.outline='none'"
      onblur="this.style.outline='none'"
      >
      <style>
        ::placeholder {
          color: rgba(255, 0, 0, 0.39) !important;
          text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
          opacity: 1;
        }
      </style>
      <button type="submit" class="btn btn-danger" 
        style="border:1px solid black; border-radius:20px; color: red; text-decoration: solid; font-weight: bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000, 2px 2px 5px rgb(75, 75, 75);">
        Search
      </button>
    </form>
    
    <div class="row">
      <% if (locals.products && products.length > 0) { %>
        <% products.forEach(product => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100" style="background-color: rgb(79, 74, 74); color: red; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000; border-radius: 15px;">
              <% if (product.imgUrl) { %>
                <img src="<%= product.imgUrl %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: contain; padding: 10px;">
              <% } else { %>
                <div class="text-center p-5 bg-secondary">No Image</div>
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description.substring(0, 100) %>...</p>
                <p class="card-text"><strong>Price: $<%= product.price.toFixed(2) %></strong></p>
                <p class="card-text">
                  <small>
                    <% if (product.brand && product.brand.name) { %>
                      Brand: <%= product.brand.name %><br>
                    <% } %>
                    <% if (product.category && product.category.name) { %>
                      Category: <%= product.category.name %>
                    <% } %>
                  </small>
                </p>
              </div>
              <div class="card-footer d-flex justify-content-between">
                <a href="/products/<%= product.id %>" class="btn btn-danger" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">View Details</a>
                <button class="btn btn-danger add-to-cart" data-product-id="<%= product.id %>" style="color: red; border: 1px solid black; font-weight: Bold; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">
                  Add to Cart
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center">
          <div class="alert alert-info" style="background-color: rgba(128, 128, 128, 0.515); color: red; border: 1px solid black;">
            No products available at this time.
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add to cart functionality
      document.querySelectorAll('.add-to-cart').forEach(button => {
        button.addEventListener('click', async function() {
          const productId = this.getAttribute('data-product-id');
          try {
            const response = await fetch('/cart/add', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({
                productId: productId,
                quantity: 1
              })
            });
            
            const data = await response.json();
            if (data.success) {
              alert('Product added to cart!');
            } else {
              alert('Error adding product to cart');
            }
          } catch (error) {
            console.error('Error:', error);
            alert('Error adding product to cart');
          }
        });
      });
    });
  </script>
</body>
</html>