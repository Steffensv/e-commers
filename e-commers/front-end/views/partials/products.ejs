<div class="container mt-4">
  <h2>Products</h2>
  
  <!-- For debugging - Display products data structure -->
  <% if (typeof products !== 'undefined') { %>
    <div class="mb-3" style="display: none">
      <pre><%= JSON.stringify(products, null, 2) %></pre>
    </div>
    
    <p>Total products: <%= products.length %></p>
  <% } %>
  
  <div class="row">
    <% if (products && products.length > 0) { %>
      <% products.forEach(product => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <% if (product.image) { %>
              <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <% } else { %>
              <div class="text-center p-5 bg-secondary">No Image</div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description ? product.description.substring(0, 100) + '...' : 'No description' %></p>
              <p class="card-text"><strong>Price: $<%= product.price ? product.price.toFixed(2) : '0.00' %></strong></p>
              <% if (product.Brand && product.Brand.name) { %>
                <p class="card-text"><small>Brand: <%= product.Brand.name %></small></p>
              <% } %>
              <% if (product.Category && product.Category.name) { %>
                <p class="card-text"><small>Category: <%= product.Category.name %></small></p>
              <% } %>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <a href="/products/<%= product.id %>" class="btn btn-primary">View Details</a>
              <button class="btn btn-success add-to-cart" data-product-id="<%= product.id %>">
                Add to Cart
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center">
        <div class="alert alert-info">
          No products available at this time.
        </div>
      </div>
    <% } %>
  </div>
</div>