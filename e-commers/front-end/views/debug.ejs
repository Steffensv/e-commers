
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Debug Tools</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div>
    <%- include('partials/navbar') %>
  </div>


  <div class="container mt-5">
    <h1>Debug Tools</h1>
    
    <div class="card mb-4">
      <div class="card-header">
        <h2>Session Status</h2>
      </div>
      <div class="card-body">
        <pre id="sessionStatus">Loading...</pre>
        <button id="checkSession" class="btn btn-primary">Check Session</button>
      </div>
    </div>
    
    <div class="card mb-4">
      <div class="card-header">
        <h2>JWT Token Test</h2>
      </div>
      <div class="card-body">
        <pre id="tokenStatus">Loading...</pre>
        <button id="checkToken" class="btn btn-primary">Check Token</button>
      </div>
    </div>
    
    <div class="card mb-4">
      <div class="card-header">
        <h2>Auth API Test</h2>
      </div>
      <div class="card-body">
        <pre id="apiTestStatus">Not tested yet</pre>
        <button id="testAuth" class="btn btn-primary">Test Auth API</button>
      </div>
    </div>
    
    <div class="mt-4">
      <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
  </div>
  
  <script>
    // Function to format JSON nicely
    function formatJSON(obj) {
      return JSON.stringify(obj, null, 2);
    }
    
    // Check session
    document.getElementById('checkSession').addEventListener('click', async function() {
      try {
        const response = await fetch('/debug/session');
        const contentType = response.headers.get('content-type');
        
        if (contentType && contentType.includes('application/json')) {
          const data = await response.json();
          document.getElementById('sessionStatus').textContent = formatJSON(data);
        } else {
          const text = await response.text();
          document.getElementById('sessionStatus').textContent = 
            'Error: Response is not JSON\n\n' + text.substring(0, 200) + '...';
        }
      } catch (error) {
        document.getElementById('sessionStatus').textContent = 'Error: ' + error.message;
      }
    });
    
    // Check token
    document.getElementById('checkToken').addEventListener('click', async function() {
      try {
        const response = await fetch('/debug/check-token');
        const contentType = response.headers.get('content-type');
        
        if (contentType && contentType.includes('application/json')) {
          const data = await response.json();
          document.getElementById('tokenStatus').textContent = formatJSON(data);
        } else {
          const text = await response.text();
          document.getElementById('tokenStatus').textContent = 
            'Error: Response is not JSON\n\n' + text.substring(0, 200) + '...';
        }
      } catch (error) {
        document.getElementById('tokenStatus').textContent = 'Error: ' + error.message;
      }
    });
    
    // Test Auth API
    document.getElementById('testAuth').addEventListener('click', async function() {
      try {
        const response = await fetch('/debug/test-auth');
        const contentType = response.headers.get('content-type');
        
        if (contentType && contentType.includes('application/json')) {
          const data = await response.json();
          document.getElementById('apiTestStatus').textContent = formatJSON(data);
        } else {
          const text = await response.text();
          document.getElementById('apiTestStatus').textContent = 
            'Error: Response is not JSON\n\n' + text.substring(0, 200) + '...';
        }
      } catch (error) {
        document.getElementById('apiTestStatus').textContent = 'Error: ' + error.message;
      }
    });
    
    // Load session status on page load
    document.getElementById('checkSession').click();
  </script>
</body>
</html>